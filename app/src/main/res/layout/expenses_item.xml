<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/expenses_card_root"
                                    app:cardElevation="3dp"
                                    app:cardCornerRadius="2dp"
                                    app:cardUseCompatPadding="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/expenses_relative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_expense_item"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/price_expense_item"
        android:layout_toRightOf="@id/name_expense_item"/>
</RelativeLayout>
    <View
        android:background="@color/selected_color"
        android:id="@+id/selected_overlay"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:visibility="invisible"/>
</android.support.v7.widget.CardView>